@using Visitors.Contracts
@model DashBoardCount

@{
    ViewData["Title"] = "Home Page";
}
@{
    var status = Context.Request.Query["status"];
    var pending = "text-primary";
    var completed = "text-primary";
    var cancelled = "text-primary";
    var all = "text-primary";

    switch(status)
    {
        case "pending" :
            pending = "active text-white";
            break;
        case "completed" :
            completed = "active text-white";
            break;
        case "cancelled" :
            cancelled = "active text-white";
            break;
        default:
            all = "active text-white";
            break;
    }

}
<div>
  


            <div class="p-3">
    <div class="d-flex justify-content-lg-between pt-4">
        <div>
            <h2 class="text-primary">Appointment List</h2>
        </div
            <div class="pt-2">
                <ul class="list-group list-group-horizontal-sm">
                 
                    <a style="text-decoration:none;" asp-area="Customer" asp-controller="Home"
                       asp-action="History" asp-route-status="pending">
                    <li class="list-group-item @pending">Pending</li>
                    </a>
                    <a style="text-decoration:none;" asp-area="Customer" asp-controller="Home"
                       asp-action="History" asp-route-status="cancelled">
                    <li class="list-group-item @cancelled">Canceled</li>
                    </a>
                    <a style="text-decoration:none;" asp-area="Customer" asp-controller="Home"
                       asp-action="History" asp-route-status="completed">
                    <li class="list-group-item @completed">Completed</li> </a>            
                    <a style="text-decoration:none;" asp-area="Customer" asp-controller="Home"
                       asp-action="History" asp-route-status="all">
                    <li class="list-group-item @all">All</li>
                    </a>

                </ul>
             </div>
    </div>
</div>
    <br />
    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th> Name </th>
                <th> To Meet </th>
                <th> Department </th>
                <th> Phone Number </th>
                <th> Email </th>
                <th> Timing </th>
                <th> In Time</th>
                <th> Out Time</th>
                <th></th>
            </tr>
        </thead>
    </table>
    </div>


@section Scripts{
    @{
        <script src="~/js/HistoryDetails.js"></script>
    }
    }