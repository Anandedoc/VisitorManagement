@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row" style="height: 70vh">
    <div class="col-md-6" style="margin-top: 20px">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating" style="margin-top: 20px">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating" style="margin-top: 20px">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
         @*   <div class="form-floating" style="margin-top: 20px">
                <input asp-for="Input.UserId" class="form-control" />
                <label asp-for="Input.UserId" class="form-label"></label>
                <span asp-validation-for="Input.UserId" class="text-danger"></span>
            </div> *@ 
            <div class="form-floating"style="margin-top: 20px">
                <input asp-for="Input.Address" class="form-control" />
                <label asp-for="Input.Address" class="form-label"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary" style="margin-top: 20px">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
