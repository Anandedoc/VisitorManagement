<div class="row p-4" style="height: 80vh">
    <div class="col-md-7">
        <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            @*<hr />*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Input.UserName" class="form-control" aria-required="true" />
                <label asp-for="Input.UserName"></label>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6">
                <input asp-for="Input.Name" class="form-control" aria-required="true" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>   
         @*   <div class="form-floating py-2 col-6">
                <input asp-for="Input.Address" class="form-control" aria-required="true" />
                <label asp-for="Input.Address"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>  *@ 
             
            <div class="form-floating py-2 col-6">
                <input asp-for="Input.Password" class="form-control" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6">
                <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6">
                <input asp-for="Input.Phone" class="form-control" aria-required="true" />
                <label asp-for="Input.Phone"></label>
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>
      @*      <div class="form-floating py-2 col-6">
                <input asp-for="Input.UserId" class="form-control" aria-required="true" />
                <label asp-for="Input.UserId"></label>
                <span asp-validation-for="Input.UserId" class="text-danger"></span>
            </div>*@
            @if(User.IsInRole(nameof(UserRoleTypeValues.SuperAdmin)))
            {
                <div class="form-floating py-2 col-6">
                    <select asp-for="Input.DepartmentId" asp-items="@Model.Input.DepartmentList" class="form-select">
                        <option disabled selected value="@Model.Input.DepartmentId">--Select Department--</option>
                    </select>
                </div>
                <div class="form-floating py-2 col-6">
                    <select asp-for="Input.UserRole" asp-items="@Model.Input.RoleList" class="form-select">
                        <option disabled selected value="@Model.Input.UserRole">--Select Roles--</option>
                    </select>
                </div>         
            }
           
            <button id="registerSubmit" type="submit" class="w-100 btn  btn-primary" style="margin-top:20px">Register</button>
        </form>
    </div>
